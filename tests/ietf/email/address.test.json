{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - with dot in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Valid - with plus sign",
      "data": "admin+tag@subdomain.example.com",
      "valid": true
    },
    {
      "description": "Valid - with underscore",
      "data": "test_user@example.co.uk",
      "valid": true
    },
    {
      "description": "Valid - with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - multiple subdomains",
      "data": "user@mail.subdomain.example.com",
      "valid": true
    },
    {
      "description": "Valid - with special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part",
      "data": "\"quoted.string\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with spaces",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with special chars",
      "data": "\"user@name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4 loopback",
      "data": "user@[127.0.0.1]",
      "valid": true
    },
    {
      "description": "Valid - long local part",
      "data": "verylonglocalpartwithmanychars@example.com",
      "valid": true
    },
    {
      "description": "Valid - long domain",
      "data": "user@verylongdomainnamewithmanychars.com",
      "valid": true
    },
    {
      "description": "Valid - with dash in local part",
      "data": "user-name@example.com",
      "valid": true
    },
    {
      "description": "Valid - numeric local part",
      "data": "123456@example.com",
      "valid": true
    },
    {
      "description": "Valid - numeric domain label",
      "data": "user@123.456.com",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at start",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at end",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - only @",
      "data": "@",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - leading space",
      "data": " user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing space",
      "data": "user@example.com ",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - hyphen at start of domain label",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - hyphen at end of domain label",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - no TLD",
      "data": "user@example",
      "valid": false
    },
    {
      "description": "Invalid - parentheses in unquoted local part",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - brackets in unquoted local part",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - comma in unquoted local part",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon in unquoted local part",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon in unquoted local part",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash in unquoted local part",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - quote in unquoted local part",
      "data": "user\"name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - less than in unquoted local part",
      "data": "user<name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - greater than in unquoted local part",
      "data": "user>name@example.com",
      "valid": false
    },
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - uppercase letters",
      "data": "USER@EXAMPLE.COM",
      "valid": true
    },
    {
      "description": "Valid - mixed case",
      "data": "User@Example.Com",
      "valid": true
    },
    {
      "description": "Valid - with all allowed special chars",
      "data": "!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - multiple dots in local part",
      "data": "first.middle.last@example.com",
      "valid": true
    },
    {
      "description": "Valid - multiple dots in domain",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Invalid - domain literal without closing bracket",
      "data": "user@[192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without opening bracket",
      "data": "user@192.168.1.1]",
      "valid": false
    },
    {
      "description": "Invalid - unquoted string with @",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Valid - short TLD",
      "data": "user@example.co",
      "valid": true
    },
    {
      "description": "Valid - long TLD",
      "data": "user@example.museum",
      "valid": true
    }
  ]
}
