{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dot in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "admin@mail.example.net",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "user+tag@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - multiple dots in local part",
      "data": "first.middle.last@example.com",
      "valid": true
    },
    {
      "description": "Valid - multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Valid - short domain",
      "data": "user@a.co",
      "valid": true
    },
    {
      "description": "Valid - long local part",
      "data": "verylonglocalpartname@example.com",
      "valid": true
    },
    {
      "description": "Valid - numeric local part",
      "data": "123456@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.b.c",
      "valid": true
    },
    {
      "description": "Valid - quoted string with space",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with special characters",
      "data": "\"user@name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with escaped quote",
      "data": "\"user\\\"name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with escaped backslash",
      "data": "\"user\\\\name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with dot at start",
      "data": "\".user\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with dot at end",
      "data": "\"user.\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with consecutive dots",
      "data": "\"user..name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with text",
      "data": "user@[domain.literal]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv6 notation",
      "data": "user@[IPv6:2001:db8::1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with escaped characters",
      "data": "user@[test\\]literal]",
      "valid": true
    },
    {
      "description": "Valid - single label domain",
      "data": "user@localhost",
      "valid": true
    },
    {
      "description": "Valid - all atext characters in local part",
      "data": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted empty string",
      "data": "\"\"@example.com",
      "valid": true
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - double @",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ in local part without quotes",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading hyphen in domain",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing hyphen in domain",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain starting with dot",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain ending with dot",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - special character in domain",
      "data": "user@exam_ple.com",
      "valid": false
    },
    {
      "description": "Invalid - parentheses without quotes",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - comma",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - angle brackets",
      "data": "<user@example.com>",
      "valid": false
    },
    {
      "description": "Invalid - square brackets in local part",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash without quotes",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - double quotes without proper escaping",
      "data": "user\"name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed quoted string",
      "data": "\"user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - quoted string not at start",
      "data": "user\"name\"@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed domain literal",
      "data": "user@[192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - domain literal not at domain position",
      "data": "user@example.[com]",
      "valid": false
    },
    {
      "description": "Invalid - empty domain literal",
      "data": "user@[]",
      "valid": false
    },
    {
      "description": "Invalid - unescaped quote in quoted string",
      "data": "\"user\"name\"@example.com",
      "valid": false
    }
  ]
}
