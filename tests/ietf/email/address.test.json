{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "user@mail.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dots in local-part",
      "data": "john.doe@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "user+tag@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@my-example.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with special chars in local-part",
      "data": "user!#$%&'*+/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted local-part with spaces",
      "data": "\"john doe\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted local-part with special chars",
      "data": "\"user@domain\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted local-part with escaped quote",
      "data": "\"user\\\"name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted local-part with escaped backslash",
      "data": "\"user\\\\name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv6",
      "data": "user@[IPv6:2001:db8::1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv6 full",
      "data": "user@[IPv6:2001:0db8:0000:0000:0000:0000:0000:0001]",
      "valid": true
    },
    {
      "description": "Valid - single letter local-part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single letter domain",
      "data": "user@x.com",
      "valid": true
    },
    {
      "description": "Valid - long TLD",
      "data": "user@example.museum",
      "valid": true
    },
    {
      "description": "Valid - two letter TLD",
      "data": "user@example.co",
      "valid": true
    },
    {
      "description": "Valid - multi-level TLD",
      "data": "user@example.co.uk",
      "valid": true
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at start",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at end",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - missing local-part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - space in local-part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@example .com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local-part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local-part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local-part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - leading hyphen in domain label",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing hyphen in domain label",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain without TLD",
      "data": "user@example",
      "valid": false
    },
    {
      "description": "Invalid - parentheses in unquoted local-part",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - brackets in unquoted local-part",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - comma in unquoted local-part",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon in unquoted local-part",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon in unquoted local-part",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - angle brackets in unquoted local-part",
      "data": "<user>@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unescaped quote in quoted string",
      "data": "\"user\"name\"@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unmatched quote",
      "data": "\"user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without brackets",
      "data": "user@192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - IPv6 without prefix",
      "data": "user@[2001:db8::1]",
      "valid": false
    },
    {
      "description": "Invalid - malformed IPv4 in domain literal",
      "data": "user@[999.999.999.999]",
      "valid": false
    },
    {
      "description": "Invalid - domain starting with number only",
      "data": "user@123",
      "valid": false
    },
    {
      "description": "Invalid - backslash in unquoted local-part",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - double quote in unquoted local-part",
      "data": "user\"name@example.com",
      "valid": false
    }
  ]
}
