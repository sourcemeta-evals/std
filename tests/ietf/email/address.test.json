{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Valid - simple address",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with dot in local part",
      "data": "john.doe@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with plus sign",
      "data": "user+tag@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - address with subdomain",
      "data": "user@mail.example.com",
      "valid": true
    },
    {
      "description": "Valid - address with multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Valid - address with numbers in local part",
      "data": "user123@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with numbers in domain",
      "data": "user@example123.com",
      "valid": true
    },
    {
      "description": "Valid - address with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with hyphen in local part",
      "data": "user-name@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part",
      "data": "\"user\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with spaces",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with special chars",
      "data": "\"user@name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal IPv4 loopback",
      "data": "user@[127.0.0.1]",
      "valid": true
    },
    {
      "description": "Valid - address with exclamation mark",
      "data": "user!name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with hash",
      "data": "user#name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with dollar sign",
      "data": "user$name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with percent",
      "data": "user%name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with ampersand",
      "data": "user&name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with apostrophe",
      "data": "user'name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with asterisk",
      "data": "user*name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with equals",
      "data": "user=name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with question mark",
      "data": "user?name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with caret",
      "data": "user^name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with backtick",
      "data": "user`name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with pipe",
      "data": "user|name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with tilde",
      "data": "user~name@example.com",
      "valid": true
    },
    {
      "description": "Valid - address with braces",
      "data": "user{name}@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - long local part",
      "data": "verylongusernamewithmanychars@example.com",
      "valid": true
    },
    {
      "description": "Valid - long domain",
      "data": "user@verylongdomainnamewithmanychars.com",
      "valid": true
    },
    {
      "description": "Valid - multiple dots in local part",
      "data": "user.name.test@example.com",
      "valid": true
    },
    {
      "description": "Valid - TLD only domain",
      "data": "user@localhost",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ signs",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ signs separated",
      "data": "user@domain@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - leading space",
      "data": " user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing space",
      "data": "user@example.com ",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - leading hyphen in domain label",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing hyphen in domain label",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - parentheses in local part",
      "data": "user(name)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - angle brackets",
      "data": "<user@example.com>",
      "valid": false
    },
    {
      "description": "Invalid - comma",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - square brackets in local part",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted special chars",
      "data": "user\"name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - type number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid - type boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid - type null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid - type array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid - type object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - numeric domain (dot-atom)",
      "data": "user@192.168.1.1",
      "valid": true
    },
    {
      "description": "Invalid - incomplete domain literal",
      "data": "user@[192.168.1",
      "valid": false
    },
    {
      "description": "Invalid - domain literal with invalid IP",
      "data": "user@[256.256.256.256]",
      "valid": false
    },
    {
      "description": "Invalid - newline in address",
      "data": "user@example.com\n",
      "valid": false
    },
    {
      "description": "Invalid - tab in address",
      "data": "user@example.com\t",
      "valid": false
    },
    {
      "description": "Invalid - carriage return",
      "data": "user@example.com\r",
      "valid": false
    }
  ]
}
