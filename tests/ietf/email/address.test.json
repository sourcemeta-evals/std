      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash in unquoted local part",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - double quote in unquoted local part",
      "data": "user\"name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain starting with hyphen",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain ending with hyphen",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - TLD starting with hyphen",
      "data": "user@example.-com",
      "valid": false
    },
    {
      "description": "Invalid - TLD ending with hyphen",
      "data": "user@example.com-",
      "valid": false
    },
    {
      "description": "Invalid - domain with only numbers",
      "data": "user@123",
      "valid": false
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - numeric local part",
      "data": "123@example.com",
      "valid": true
    },
    {
      "description": "Invalid - leading hyphen in domain label",
      "data": "user@mail.-example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing hyphen in domain label",
      "data": "user@mail-.example.com",
      "valid": false
    }
  ]
