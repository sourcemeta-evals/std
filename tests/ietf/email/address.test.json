{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dot in local-part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "admin+tag@example.net",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@mail-server.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with special characters in local-part",
      "data": "test.email.with+symbol@example4u.net",
      "valid": true
    },
    {
      "description": "Valid - quoted string local-part",
      "data": "\"quoted string\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with spaces",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with special chars",
      "data": "\"very.unusual.@.unusual.com\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4 (0.0.0.0)",
      "data": "user@[0.0.0.0]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4 (255.255.255.255)",
      "data": "user@[255.255.255.255]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv6 tag",
      "data": "user@[IPv6:2001:db8::1]",
      "valid": true
    },
    {
      "description": "Valid - all allowed special chars in local-part",
      "data": "!#$%&'*+/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - multiple dots in local-part",
      "data": "user.name.test@example.com",
      "valid": true
    },
    {
      "description": "Valid - multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Valid - single character local-part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - obs-local-part with quoted part",
      "data": "user.\"quoted.part\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with escaped quote",
      "data": "\"user\\\"name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with escaped backslash",
      "data": "\"user\\\\name\"@example.com",
      "valid": true
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local-part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ signs",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ signs separated",
      "data": "user@example@com",
      "valid": false
    },
    {
      "description": "Invalid - space in local-part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@example .com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local-part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local-part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local-part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted special char @ in local-part",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted parenthesis in local-part",
      "data": "user(name)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted comma in local-part",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted semicolon in local-part",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted colon in local-part",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted less-than in local-part",
      "data": "user<name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted greater-than in local-part",
      "data": "user>name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted brackets in local-part",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted backslash in local-part",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed quoted string",
      "data": "\"user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without closing bracket",
      "data": "user@[192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without opening bracket",
      "data": "user@192.168.1.1]",
      "valid": false
    },
    {
      "description": "Invalid - IPv4 with invalid octet (256)",
      "data": "user@[256.1.1.1]",
      "valid": false
    },
    {
      "description": "Invalid - IPv4 with invalid octet (999)",
      "data": "user@[999.999.999.999]",
      "valid": false
    },
    {
      "description": "Invalid - IPv4 with only 3 octets",
      "data": "user@[192.168.1]",
      "valid": false
    },
    {
      "description": "Invalid - IPv4 with 5 octets",
      "data": "user@[192.168.1.1.1]",
      "valid": false
    },
    {
      "description": "Invalid - domain starting with hyphen",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain ending with hyphen",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain label starting with hyphen",
      "data": "user@mail.-example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain label ending with hyphen",
      "data": "user@mail-.example.com",
      "valid": false
    }
  ]
}
