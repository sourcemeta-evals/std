    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Simple valid email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Email with subdomain",
      "data": "user@mail.example.com",
      "valid": true
    },
    {
      "description": "Email with multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Email with dot in local part",
      "data": "john.doe@example.com",
      "valid": true
    },
    {
