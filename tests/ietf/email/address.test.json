{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "A simple email address",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Email with dots in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Email with plus sign in local part",
      "data": "admin+tag@mail.example.net",
      "valid": true
    },
    {
      "description": "Email with quoted local part",
      "data": "\"quoted.user\"@example.com",
      "valid": true
    },
    {
      "description": "Email with domain literal (IPv4)",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Email with hyphen in domain",
      "data": "test@my-domain.com",
      "valid": true
    },
    {
      "description": "Email with subdomain",
      "data": "info@mail.example.co.uk",
      "valid": true
    },
    {
      "description": "Email with numbers in local part",
      "data": "user123@example.com",
      "valid": true
    },
    {
      "description": "Email with underscore in local part",
      "data": "first_last@example.com",
      "valid": true
    },
    {
      "description": "Email with special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Missing @ symbol",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Multiple @ symbols",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid character in local part",
      "data": "user<>@example.com",
      "valid": false
    },
    {
      "description": "Domain starting with hyphen",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Domain ending with hyphen",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Just @ symbol",
      "data": "@",
      "valid": false
    },
    {
      "description": "Consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Local part starting with dot",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Local part ending with dot",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Domain with consecutive dots",
      "data": "user@example..com",
      "valid": false
    }
  ]
}
