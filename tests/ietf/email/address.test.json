{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Valid simple email address",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid email with subdomain",
      "data": "user@mail.example.com",
      "valid": true
    },
    {
      "description": "Valid email with dots in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Valid email with plus sign",
      "data": "test+tag@example.net",
      "valid": true
    },
    {
      "description": "Valid email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid email with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid email with multiple subdomains",
      "data": "user@mail.subdomain.example.com",
      "valid": true
    },
    {
      "description": "Valid email with special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid quoted string local part",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid quoted string with escaped characters",
      "data": "\"user\\\"name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid email with long TLD",
      "data": "user@example.museum",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ signs",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at start",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at end",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - empty domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - spaces in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - spaces in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading hyphen in domain",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing hyphen in domain",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain starting with dot",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain ending with dot",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - special character in domain",
      "data": "user@exam_ple.com",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - only @",
      "data": "@",
      "valid": false
    },
    {
      "description": "Invalid - leading space",
      "data": " user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing space",
      "data": "user@example.com ",
      "valid": false
    },
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid email with numeric TLD",
      "data": "user@example.123",
      "valid": true
    },
    {
      "description": "Valid email with all caps",
      "data": "USER@EXAMPLE.COM",
      "valid": true
    },
    {
      "description": "Valid email with mixed case",
      "data": "UsEr@ExAmPlE.CoM",
      "valid": true
    },
    {
      "description": "Invalid - unquoted space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash without quote",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Valid short domain",
      "data": "user@ex.co",
      "valid": true
    },
    {
      "description": "Valid email with dash in local part",
      "data": "user-name@example.com",
      "valid": true
    }
  ]
}
