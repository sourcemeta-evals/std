{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "user@mail.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dots in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "test+tag@example.net",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - email with special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with special chars",
      "data": "\"user@name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal IPv4 with zeros",
      "data": "user@[10.0.0.1]",
      "valid": true
    },
    {
      "description": "Valid - long domain",
      "data": "user@subdomain.example.co.uk",
      "valid": true
    },
    {
      "description": "Valid - multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with all allowed special chars",
      "data": "test!#$%&'*+/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - uppercase letters",
      "data": "USER@EXAMPLE.COM",
      "valid": true
    },
    {
      "description": "Valid - mixed case",
      "data": "User@Example.Com",
      "valid": true
    },
    {
      "description": "Valid - numbers in local part",
      "data": "12345@example.com",
      "valid": true
    },
    {
      "description": "Valid - hyphen in domain",
      "data": "user@my-example-domain.com",
      "valid": true
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - double @",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ in wrong place",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@example .com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - leading hyphen in domain",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing hyphen in domain",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - only local part",
      "data": "user",
      "valid": false
    },
    {
      "description": "Invalid - only domain",
      "data": "example.com",
      "valid": false
    },
    {
      "description": "Invalid - parentheses without quotes",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - comma in local part",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon in local part",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon in local part",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - angle brackets",
      "data": "<user@example.com>",
      "valid": false
    },
    {
      "description": "Invalid - square brackets in local part",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash in local part",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted space",
      "data": "user @example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading space",
      "data": " user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing space",
      "data": "user@example.com ",
      "valid": false
    },
    {
      "description": "Invalid - newline",
      "data": "user@example.com\n",
      "valid": false
    },
    {
      "description": "Invalid - tab character",
      "data": "user\t@example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain with only numbers",
      "data": "user@123",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without brackets",
      "data": "user@192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - incomplete domain literal",
      "data": "user@[192.168.1",
      "valid": false
    },
    {
      "description": "Invalid - domain literal with invalid IP",
      "data": "user@[256.256.256.256]",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ symbols",
      "data": "user@domain@example.com",
      "valid": false
    },
    {
      "description": "Invalid - quote in middle of local part",
      "data": "user\"name@example.com",
      "valid": false
    }
  ]
}
