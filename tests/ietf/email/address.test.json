{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email address",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dot in local part",
      "data": "john.doe@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "user+tag@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "user@mail.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple subdomains",
      "data": "user@mail.sub.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore in local part",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with dot",
      "data": "\"john.doe\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with special chars",
      "data": "\"user@name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - long local part",
      "data": "verylonglocalpartnamethatgoesonforsometime@example.com",
      "valid": true
    },
    {
      "description": "Valid - long domain",
      "data": "user@verylongdomainnamethatgoesonforsometime.com",
      "valid": true
    },
    {
      "description": "Valid - TLD only domain",
      "data": "user@com",
      "valid": true
    },
    {
      "description": "Valid - multiple dots in local part",
      "data": "first.middle.last@example.com",
      "valid": true
    },
    {
      "description": "Valid - multiple dots in domain",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Valid - uppercase letters",
      "data": "USER@EXAMPLE.COM",
      "valid": true
    },
    {
      "description": "Valid - mixed case",
      "data": "User@Example.Com",
      "valid": true
    },
    {
      "description": "Valid - equals sign in local part",
      "data": "user=name@example.com",
      "valid": true
    },
    {
      "description": "Valid - question mark in local part",
      "data": "user?name@example.com",
      "valid": true
    },
    {
      "description": "Valid - caret in local part",
      "data": "user^name@example.com",
      "valid": true
    },
    {
      "description": "Valid - backtick in local part",
      "data": "user`name@example.com",
      "valid": true
    },
    {
      "description": "Valid - curly braces in local part",
      "data": "user{name}@example.com",
      "valid": true
    },
    {
      "description": "Valid - pipe in local part",
      "data": "user|name@example.com",
      "valid": true
    },
    {
      "description": "Valid - tilde in local part",
      "data": "user~name@example.com",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - double @",
      "data": "user@@example.com",
      "valid": false
