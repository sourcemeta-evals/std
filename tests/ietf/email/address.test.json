{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email address",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "john.doe@mail.example.org",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "admin+tag@test.co.uk",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part",
      "data": "\"quoted.string\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - local part with hyphen",
      "data": "user-name@example.com",
      "valid": true
    },
    {
      "description": "Valid - local part with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - local part with numbers",
      "data": "user123@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - multiple dots in local part",
      "data": "first.middle.last@example.com",
      "valid": true
    },
    {
      "description": "Valid - multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Valid - local part with special characters",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - uppercase letters",
      "data": "User@Example.COM",
      "valid": true
    },
    {
      "description": "Valid - mixed case",
      "data": "UsEr@ExAmPlE.cOm",
      "valid": true
    },
    {
      "description": "Valid - long local part",
      "data": "verylonglocalpartnamethatisvalidbutunusual@example.com",
      "valid": true
    },
    {
      "description": "Valid - long domain",
      "data": "user@verylongdomainnamethatisvalidbutunusual.com",
      "valid": true
    },
    {
      "description": "Valid - TLD with multiple characters",
      "data": "user@example.museum",
      "valid": true
    },
    {
      "description": "Valid - numeric TLD",
      "data": "user@example.123",
      "valid": true
    },
    {
      "description": "Valid - hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - numbers in domain",
      "data": "user@domain123.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with spaces",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with special chars",
      "data": "\"user@name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with escaped quote",
      "data": "\"user\\\"name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with backslash",
      "data": "\"user\\\\name\"@example.com",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ signs",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at start",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at end",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - only @",
      "data": "@",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - special char in domain without quotes",
      "data": "user@exam[ple.com",
      "valid": false
    },
    {
      "description": "Invalid - parentheses in local part",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - comma in local part",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon in local part",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon in local part",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - angle brackets in local part",
      "data": "user<name>@example.com",
      "valid": false
    },
    {
      "description": "Invalid - square brackets in local part",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash in local part",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - quote in local part without full quoting",
      "data": "user\"name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - hyphen at start of domain label",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - hyphen at end of domain label",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - underscore in domain",
      "data": "user@exam_ple.com",
      "valid": false
    },
    {
      "description": "Invalid - no TLD",
      "data": "user@example",
      "valid": false
    },
    {
      "description": "Invalid - IP address without brackets",
      "data": "user@192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - incomplete IP in brackets",
      "data": "user@[192.168.1]",
      "valid": false
    },
    {
      "description": "Invalid - invalid IP in brackets",
      "data": "user@[256.256.256.256]",
      "valid": false
    },
    {
      "description": "Invalid - empty brackets",
      "data": "user@[]",
      "valid": false
    },
    {
      "description": "Invalid - unmatched opening bracket",
      "data": "user@[example.com",
      "valid": false
    },
    {
      "description": "Invalid - unmatched closing bracket",
      "data": "user@example.com]",
      "valid": false
    }
  ]
}
