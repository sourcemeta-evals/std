{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "user@mail.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dots in local part",
      "data": "john.doe@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "user+tag@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with special characters in local part",
      "data": "user!#$%&'*+/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with quoted string local part",
      "data": "\"john doe\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with quoted string containing special chars",
      "data": "\"john@doe\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with escaped quote in quoted string",
      "data": "\"john\\\"doe\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with domain literal (IPv4)",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - long TLD",
      "data": "user@example.museum",
      "valid": true
    },
    {
      "description": "Valid - two letter TLD",
      "data": "user@example.co",
      "valid": true
    },
    {
      "description": "Valid - hyphen at start of domain label (after first char)",
      "data": "user@e-xample.com",
      "valid": true
    },
    {
      "description": "Valid - hyphen at end of domain label (before last char)",
      "data": "user@exampl-e.com",
      "valid": true
    },
    {
      "description": "Valid - multiple dots in local part",
      "data": "first.middle.last@example.com",
      "valid": true
    },
    {
      "description": "Valid - underscore in local part",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at start",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at end",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - empty domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - hyphen at start of domain label",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - hyphen at end of domain label",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain with only hyphen",
      "data": "user@-.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain extension",
      "data": "user@example",
      "valid": false
    },
    {
      "description": "Invalid - special character in domain",
      "data": "user@exam_ple.com",
      "valid": false
    },
    {
      "description": "Invalid - parentheses in unquoted local part",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - brackets in unquoted local part",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - comma in unquoted local part",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon in unquoted local part",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon in unquoted local part",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - less than in unquoted local part",
      "data": "user<name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - greater than in unquoted local part",
      "data": "user>name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash in unquoted local part",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - quote in unquoted local part",
      "data": "user\"name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - only @",
      "data": "@",
      "valid": false
    },
    {
      "description": "Invalid - leading space",
      "data": " user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing space",
      "data": "user@example.com ",
      "valid": false
    },
    {
      "description": "Invalid - newline in email",
      "data": "user@example.com\n",
      "valid": false
    },
    {
      "description": "Invalid - tab in email",
      "data": "user@example.com\t",
      "valid": false
    },
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - email with all allowed special chars",
      "data": "!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - numeric local part",
      "data": "123456@example.com",
      "valid": true
    },
    {
      "description": "Valid - numeric domain labels",
      "data": "user@123.456.com",
      "valid": true
    },
    {
      "description": "Valid - mixed case",
      "data": "User@Example.COM",
      "valid": true
    },
    {
      "description": "Valid - long local part",
      "data": "verylonglocalpartthatisvalidaccordingtorfc5322@example.com",
      "valid": true
    },
    {
      "description": "Valid - long domain",
      "data": "user@verylongdomainnamethatisvalidaccordingtorfc5322.com",
      "valid": true
    },
    {
      "description": "Invalid - unmatched quote in local part",
      "data": "\"user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - quote in middle of unquoted local part",
      "data": "us\"er@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed domain literal",
      "data": "user@[192.168.1.1",
      "valid": false
    },
    {
      "description": "Valid - numeric domain (dot-atom form)",
      "data": "user@192.168.1.1",
      "valid": true
    }
  ]
}
