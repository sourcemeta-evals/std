{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dot in local part",
      "data": "john.doe@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "user+tag@example.co.uk",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple dots in local part",
      "data": "first.middle.last@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple subdomains",
      "data": "user@mail.example.co.uk",
      "valid": true
    },
    {
      "description": "Valid - quoted local part",
      "data": "\"quoted.user\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted local part with space",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - email with all allowed special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at start",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at end",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - only @",
      "data": "@",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@example .com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted special character",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - parentheses in local part",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - angle brackets",
      "data": "<user@example.com>",
      "valid": false
    },
    {
      "description": "Invalid - comma",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon in local part",
      "data": "user:name@example.com",
      "valid": false
    }
  ]
}
