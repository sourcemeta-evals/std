{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dots in local part",
      "data": "john.doe@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "admin@mail.example.org",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "user+tag@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "test@test-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore in local part",
      "data": "test_user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part",
      "data": "\"quoted.string\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with spaces",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with special chars",
      "data": "\"user@name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - multiple subdomains",
      "data": "user@mail.subdomain.example.co.uk",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ signs",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ in wrong place",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@example .com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading hyphen in domain label",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing hyphen in domain label",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain starting with dot",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain ending with dot",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted special char @",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted parentheses",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted brackets",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted comma",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted semicolon",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted colon",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted less than",
      "data": "user<name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted greater than",
      "data": "user>name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted backslash",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed quoted string",
      "data": "\"user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed domain literal",
      "data": "user@[192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without closing bracket",
      "data": "user@192.168.1.1]",
      "valid": false
    }
  ]
}
