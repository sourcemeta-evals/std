      "data": "user @example.com",
      "valid": false
    },
    {
      "description": "Invalid - tab character",
      "data": "user\t@example.com",
      "valid": false
    },
    {
      "description": "Invalid - newline character",
      "data": "user\n@example.com",
      "valid": false
    },
    {
