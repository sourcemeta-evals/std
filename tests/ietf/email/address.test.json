{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Simple valid email address",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Email with dots in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Email with plus sign in local part",
      "data": "admin+tag@mail.example.net",
      "valid": true
    },
    {
      "description": "Email with all allowed atext characters in local part",
      "data": "user!#$%&'*+/=?^_`{|}~-@example.com",
      "valid": true
    },
    {
      "description": "Quoted string in local part with spaces",
      "data": "\"quoted string\"@example.com",
      "valid": true
    },
    {
      "description": "Quoted string with special characters",
      "data": "\"very.unusual.@.unusual.com\"@example.com",
      "valid": true
    },
    {
      "description": "Quoted string with escaped quote",
      "data": "\"escaped\\\"quote\"@example.com",
      "valid": true
    },
    {
      "description": "Quoted string with escaped backslash",
      "data": "\"escaped\\\\backslash\"@example.com",
      "valid": true
    },
    {
      "description": "Domain literal with IPv4 address",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Domain literal with text",
      "data": "user@[domain-literal-text]",
      "valid": true
    },
    {
      "description": "Email with comment in local part",
      "data": "user(comment)@example.com",
      "valid": true
    },
    {
      "description": "Email with comment before domain",
      "data": "user@(comment)example.com",
      "valid": true
    },
    {
      "description": "Email with nested comments",
      "data": "user(outer(inner))@example.com",
      "valid": true
    },
    {
      "description": "Email with folding white space",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Subdomain email",
      "data": "user@mail.example.com",
      "valid": true
    },
    {
      "description": "Multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Numbers in domain",
      "data": "user@example123.com",
      "valid": true
    },
    {
      "description": "Missing @ symbol",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Multiple @ symbols",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Empty local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Empty domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Space in local part without quotes",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid character in local part",
      "data": "user<>@example.com",
      "valid": false
    },
    {
      "description": "Invalid character in domain",
      "data": "user@exam[ple.com",
      "valid": false
    },
    {
      "description": "Dot at start of local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Dot at end of local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Unclosed quoted string",
      "data": "\"unclosed@example.com",
      "valid": false
    },
    {
      "description": "Unescaped quote in quoted string",
      "data": "\"unescaped\"quote\"@example.com",
      "valid": false
    },
    {
      "description": "Domain starting with hyphen",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Domain ending with hyphen",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Domain with consecutive dots",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Domain ending with dot",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Unclosed domain literal",
      "data": "user@[192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid character in domain literal",
      "data": "user@[invalid[char]",
      "valid": false
    },
    {
      "description": "Empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Just @ symbol",
      "data": "@",
      "valid": false
    },
    {
      "description": "Numeric local part",
      "data": "12345@example.com",
      "valid": true
    },
    {
      "description": "Underscore in local part",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Long local part",
      "data": "verylonglocalpartthatisvalidbutunusual@example.com",
      "valid": true
    },
    {
      "description": "Long domain",
      "data": "user@verylongdomainnamethatisvalidbutunusual.com",
      "valid": true
    }
  ]
}
