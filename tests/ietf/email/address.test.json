{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email address",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dot in local part",
      "data": "john.doe@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign in local part",
      "data": "user+tag@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@example-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "user@mail.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple subdomains",
      "data": "user@mail.server.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers in local part",
      "data": "user123@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers in domain",
      "data": "user@example123.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore in local part",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in local part",
      "data": "user-name@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with all allowed special characters in local part",
      "data": "user!#$%&'*+/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple dots in local part",
      "data": "first.middle.last@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple dots in domain",
      "data": "user@mail.server.example.co.uk",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part with space",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part with special chars",
      "data": "\"user@name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with escaped quote",
      "data": "\"user\\\"name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with escaped backslash",
      "data": "\"user\\\\name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4 address",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4 loopback",
      "data": "user@[127.0.0.1]",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - long local part",
      "data": "verylonglocalpartnamethatgoesonforsometime@example.com",
      "valid": true
    },
    {
      "description": "Valid - long domain",
      "data": "user@verylongdomainnamethatgoesonforsometime.com",
      "valid": true
    },
    {
      "description": "Valid - TLD only domain",
      "data": "user@localhost",
      "valid": true
    },
    {
      "description": "Valid - numeric TLD",
      "data": "user@example.123",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ signs",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - only @",
      "data": "@",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - space in local part without quotes",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@example .com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted special character in local part",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - parentheses in local part without quotes",
      "data": "user(name)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - brackets in local part without quotes",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - comma in local part without quotes",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon in local part without quotes",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon in local part without quotes",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - angle brackets in local part without quotes",
      "data": "user<name>@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash in local part without quotes",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - quote in local part without escaping",
      "data": "user\"name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed quoted string",
      "data": "\"username@example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain starting with hyphen",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain ending with hyphen",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain label starting with hyphen",
      "data": "user@mail.-example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain label ending with hyphen",
      "data": "user@mail-.example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed domain literal",
      "data": "user@[192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without closing bracket",
      "data": "user@192.168.1.1]",
      "valid": false
    },
    {
      "description": "Invalid - only whitespace",
      "data": "   ",
      "valid": false
    },
    {
      "description": "Invalid - leading whitespace",
      "data": " user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing whitespace",
      "data": "user@example.com ",
      "valid": false
    }
  ]
}
