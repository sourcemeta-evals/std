{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dots in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "test+tag@mail.example.net",
      "valid": true
    },
    {
      "description": "Valid - email with all atext characters in local part",
      "data": "!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part",
      "data": "\"quoted.user\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with spaces",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with special characters",
      "data": "\"very.unusual.@.unusual.com\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with escaped quote",
      "data": "\"user\\\"name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with escaped backslash",
      "data": "\"user\\\\name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IP address",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv6",
      "data": "user@[IPv6:2001:db8::1]",
      "valid": true
    },
    {
      "description": "Valid - subdomain",
      "data": "admin@mail.example.co.uk",
      "valid": true
    },
    {
      "description": "Valid - long local part",
      "data": "disposable.style.email.with+symbol@example.com",
      "valid": true
    },
    {
      "description": "Valid - numeric domain",
      "data": "user@123.456.789.012",
      "valid": true
    },
    {
      "description": "Valid - single character local and domain",
      "data": "a@b.c",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - space in local part without quotes",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at start of domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - dot at end of domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted special character in local part",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed quoted string",
      "data": "\"user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - unclosed domain literal",
      "data": "user@[192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without closing bracket",
      "data": "user@192.168.1.1]",
      "valid": false
    }
  ]
}
