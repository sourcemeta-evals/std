{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dots in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "user+tag@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "admin@mail.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore in local part",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - single character local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - email with special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part",
      "data": "\"quoted.string\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted string with spaces",
      "data": "\"user name\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4 (0.0.0.0)",
      "data": "user@[0.0.0.0]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4 (255.255.255.255)",
      "data": "user@[255.255.255.255]",
      "valid": true
    },
    {
      "description": "Valid - long TLD",
      "data": "user@example.museum",
      "valid": true
    },
    {
      "description": "Valid - multiple subdomains",
      "data": "user@mail.sub.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dash in local part",
      "data": "user-name@example.com",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ symbols",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ symbols in different positions",
      "data": "user@domain@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading hyphen in domain label",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing hyphen in domain label",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain starting with dot",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain ending with dot",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Invalid - only @ symbol",
      "data": "@",
      "valid": false
    },
    {
      "description": "Invalid - special character in domain",
      "data": "user@exam_ple.com",
      "valid": false
    },
    {
      "description": "Invalid - unquoted special character at in local part",
      "data": "user@name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - brackets without IP",
      "data": "user@[]",
      "valid": false
    },
    {
      "description": "Invalid - incomplete IPv4 in domain literal",
      "data": "user@[192.168.1]",
      "valid": false
    },
    {
      "description": "Invalid - IPv4 out of range in domain literal",
      "data": "user@[256.1.1.1]",
      "valid": false
    },
    {
      "description": "Invalid - leading space",
      "data": " user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing space",
      "data": "user@example.com ",
      "valid": false
    },
    {
      "description": "Invalid - parentheses in unquoted local part",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - comma in unquoted local part",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - semicolon in unquoted local part",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - colon in unquoted local part",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - angle brackets in unquoted local part",
      "data": "user<name>@example.com",
      "valid": false
    },
    {
      "description": "Invalid - square brackets in unquoted local part",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash in unquoted local part",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - quote in unquoted local part",
      "data": "user\"name@example.com",
      "valid": false
    }
  ]
}
