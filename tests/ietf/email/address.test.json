{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with subdomain",
      "data": "john.doe@mail.example.com",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "test+tag@example.org",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore",
      "data": "first_last@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple dots in local part",
      "data": "first.middle.last@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted local part",
      "data": "\"quoted.user\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - quoted local part with spaces",
      "data": "\"john doe\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4 (localhost)",
      "data": "user@[127.0.0.1]",
      "valid": true
    },
    {
      "description": "Valid - TLD domain",
      "data": "admin@example.co.uk",
      "valid": true
    },
    {
      "description": "Valid - single letter local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Valid - single letter domain",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Valid - special characters in local part",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - multiple @",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at start",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - @ at end",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - only @",
      "data": "@",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain starting with hyphen",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain ending with hyphen",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain with only numbers in TLD",
      "data": "user@example.123",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without closing bracket",
      "data": "user@[192.168.1.1",
      "valid": false
    },
    {
      "description": "Invalid - domain literal without opening bracket",
      "data": "user@192.168.1.1]",
      "valid": false
    },
    {
      "description": "Invalid - invalid IPv4 in domain literal",
      "data": "user@[999.999.999.999]",
      "valid": false
    },
    {
      "description": "Invalid - quoted string not closed",
      "data": "\"user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - backslash without quote",
      "data": "user\\name@example.com",
      "valid": false
    }
  ]
}
