{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Simple valid email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Email with dot in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Email with subdomain",
      "data": "admin@mail.example.net",
      "valid": true
    },
    {
      "description": "Email with plus sign",
      "data": "test+tag@subdomain.example.com",
      "valid": true
    },
    {
      "description": "Email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Email with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Quoted string local part",
      "data": "\"quoted.string\"@example.com",
      "valid": true
    },
    {
      "description": "Quoted string with spaces",
      "data": "\"john doe\"@example.com",
      "valid": true
    },
    {
      "description": "Local part with special characters",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Multiple dots in local part",
      "data": "first.middle.last@example.com",
      "valid": true
    },
    {
      "description": "Multiple subdomains",
      "data": "user@mail.subdomain.example.com",
      "valid": true
    },
    {
      "description": "Short domain",
      "data": "user@ex.co",
      "valid": true
    },
    {
      "description": "Single letter local part",
      "data": "a@example.com",
      "valid": true
    },
    {
      "description": "Single letter domain label",
      "data": "user@a.com",
      "valid": true
    },
    {
      "description": "Domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Domain literal with IPv4 loopback",
      "data": "user@[127.0.0.1]",
      "valid": true
    },
    {
      "description": "Long local part",
      "data": "verylonglocalpartverylonglocalpartverylonglocalpart@example.com",
      "valid": true
    },
    {
      "description": "Long domain",
      "data": "user@verylongdomainverylongdomainverylongdomain.com",
      "valid": true
    },
    {
      "description": "Uppercase letters",
      "data": "USER@EXAMPLE.COM",
      "valid": true
    },
    {
      "description": "Mixed case",
      "data": "User@Example.Com",
      "valid": true
    },
    {
      "description": "Empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Missing @ symbol",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Multiple @ symbols",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Multiple @ symbols separated",
      "data": "user@domain@example.com",
      "valid": false
    },
    {
      "description": "Space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Leading hyphen in domain label",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Trailing hyphen in domain label",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Leading dot in domain",
      "data": "user@.example.com",
      "valid": false
    },
    {
      "description": "Trailing dot in domain",
      "data": "user@example.com.",
      "valid": false
    },
    {
      "description": "Consecutive dots in domain",
      "data": "user@example..com",
      "valid": false
    },
    {
      "description": "Only @ symbol",
      "data": "@",
      "valid": false
    },
    {
      "description": "Only local part",
      "data": "user",
      "valid": false
    },
    {
      "description": "Only domain",
      "data": "example.com",
      "valid": false
    },
    {
      "description": "Unquoted special character in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Parentheses in local part without quotes",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Brackets in local part without quotes",
      "data": "user[name]@example.com",
      "valid": false
    },
    {
      "description": "Backslash in local part without quotes",
      "data": "user\\name@example.com",
      "valid": false
    },
    {
      "description": "Comma in local part without quotes",
      "data": "user,name@example.com",
      "valid": false
    },
    {
      "description": "Semicolon in local part without quotes",
      "data": "user;name@example.com",
      "valid": false
    },
    {
      "description": "Colon in local part without quotes",
      "data": "user:name@example.com",
      "valid": false
    },
    {
      "description": "Less than in local part without quotes",
      "data": "user<name@example.com",
      "valid": false
    },
    {
      "description": "Greater than in local part without quotes",
      "data": "user>name@example.com",
      "valid": false
    },
    {
      "description": "Domain with only numbers",
      "data": "user@123.456",
      "valid": true
    },
    {
      "description": "IP address without brackets",
      "data": "user@192.168.1.1",
      "valid": true
    },
    {
      "description": "Domain starting with number",
      "data": "user@1example.com",
      "valid": true
    },
    {
      "description": "TLD with numbers",
      "data": "user@example.c0m",
      "valid": true
    }
  ]
}
