{
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "target": "../../../schemas/ietf/email/address.json",
  "tests": [
    {
      "description": "Invalid type - number",
      "data": 123,
      "valid": false
    },
    {
      "description": "Invalid type - boolean",
      "data": true,
      "valid": false
    },
    {
      "description": "Invalid type - null",
      "data": null,
      "valid": false
    },
    {
      "description": "Invalid type - array",
      "data": [],
      "valid": false
    },
    {
      "description": "Invalid type - object",
      "data": {},
      "valid": false
    },
    {
      "description": "Valid - simple email",
      "data": "user@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with dots in local part",
      "data": "john.doe@example.org",
      "valid": true
    },
    {
      "description": "Valid - email with plus sign",
      "data": "admin+tag@mail.example.net",
      "valid": true
    },
    {
      "description": "Valid - email with hyphen in domain",
      "data": "user@my-domain.com",
      "valid": true
    },
    {
      "description": "Valid - email with numbers",
      "data": "user123@example456.com",
      "valid": true
    },
    {
      "description": "Valid - email with underscore",
      "data": "user_name@example.com",
      "valid": true
    },
    {
      "description": "Valid - email with multiple subdomains",
      "data": "user@mail.example.co.uk",
      "valid": true
    },
    {
      "description": "Valid - quoted string local part",
      "data": "\"quoted.string\"@example.com",
      "valid": true
    },
    {
      "description": "Valid - domain literal with IPv4",
      "data": "user@[192.168.1.1]",
      "valid": true
    },
    {
      "description": "Valid - local part with special characters",
      "data": "user!#$%&'*+-/=?^_`{|}~@example.com",
      "valid": true
    },
    {
      "description": "Valid - single character local and domain",
      "data": "a@b.c",
      "valid": true
    },
    {
      "description": "Valid - long local part",
      "data": "verylonglocalpartwithmanycharacters@example.com",
      "valid": true
    },
    {
      "description": "Valid - numeric domain",
      "data": "user@123.456.789.012",
      "valid": true
    },
    {
      "description": "Invalid - missing @",
      "data": "userexample.com",
      "valid": false
    },
    {
      "description": "Invalid - missing local part",
      "data": "@example.com",
      "valid": false
    },
    {
      "description": "Invalid - missing domain",
      "data": "user@",
      "valid": false
    },
    {
      "description": "Invalid - double @",
      "data": "user@@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in local part",
      "data": "user name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - space in domain",
      "data": "user@exam ple.com",
      "valid": false
    },
    {
      "description": "Invalid - empty string",
      "data": "",
      "valid": false
    },
    {
      "description": "Invalid - only @",
      "data": "@",
      "valid": false
    },
    {
      "description": "Invalid - leading dot in local part",
      "data": ".user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing dot in local part",
      "data": "user.@example.com",
      "valid": false
    },
    {
      "description": "Invalid - consecutive dots in local part",
      "data": "user..name@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading hyphen in domain",
      "data": "user@-example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing hyphen in domain",
      "data": "user@example-.com",
      "valid": false
    },
    {
      "description": "Invalid - domain without TLD",
      "data": "user@example",
      "valid": false
    },
    {
      "description": "Invalid - multiple @ symbols",
      "data": "user@domain@example.com",
      "valid": false
    },
    {
      "description": "Invalid - leading space",
      "data": " user@example.com",
      "valid": false
    },
    {
      "description": "Invalid - trailing space",
      "data": "user@example.com ",
      "valid": false
    },
    {
      "description": "Invalid - parentheses without quotes",
      "data": "user(comment)@example.com",
      "valid": false
    },
    {
      "description": "Invalid - brackets without IP",
      "data": "user@[example.com]",
      "valid": false
    },
    {
      "description": "Invalid - incomplete IPv4 in brackets",
      "data": "user@[192.168.1]",
      "valid": false
    }
  ]
}
