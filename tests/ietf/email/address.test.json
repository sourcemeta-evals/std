    },
    {
      "description": "Valid - curly braces in local part",
      "data": "user{name}@example.com",
      "valid": true
    },
    {
      "description": "Valid - pipe in local part",
      "data": "user|name@example.com",
      "valid": true
    },
    {
      "description": "Valid - tilde in local part",
      "data": "user~name@example.com",
      "valid": true
    },
    {
