{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RFC 5322 Email Address (Addr-Spec)",
  "description": "An Internet email address in addr-spec format as defined in RFC 5322 section 3.4.1, consisting of a local-part followed by an at-sign (@) followed by a domain",
  "$comment": "https://www.rfc-editor.org/rfc/rfc5322#section-3.4.1",
  "examples": [
    "user@example.com",
    "john.doe@mail.example.org",
    "admin+tag@subdomain.example.co.uk",
    "\"quoted.string\"@example.com",
    "user@[192.168.1.1]",
    "first.last@example.com",
    "test_email@test-domain.com"
  ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "x-links": [ "https://www.rfc-editor.org/rfc/rfc5322#section-3.4.1" ],
  "type": "string",
  "pattern": "^(?:[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+)*|\"(?:[\\x20\\x21\\x23-\\x5B\\x5D-\\x7E]|\\\\[\\x20-\\x7E])*\")@(?:[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?(?:\\.[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?)*|\\[(?:[\\x21-\\x5A\\x5E-\\x7E])+\\])$"
}
