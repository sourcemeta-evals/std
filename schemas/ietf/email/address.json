{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RFC 5322 Email Address",
  "description": "An Internet email address in addr-spec format as defined in RFC 5322 section 3.4.1",
  "$comment": "https://www.rfc-editor.org/rfc/rfc5322#section-3.4.1",
  "examples": [
    "user@example.com",
    "john.doe@example.org",
    "admin@mail.example.net",
    "\"quoted.user\"@example.com",
    "user@[192.168.1.1]"
  ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "pattern": "^(?:(?:[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+)*)|(?:\"(?:[\\x20\\x21\\x23-\\x5B\\x5D-\\x7E]|\\\\[\\x21-\\x7E])*\"))@(?:(?:[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?\\.)+[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?|(?:\\[(?:(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\]))$",
  "format": "email"
}
