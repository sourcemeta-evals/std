{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RFC 5322 Email Address",
  "description": "An Internet email address in addr-spec format as defined in RFC 5322 section 3.4.1",
  "$comment": "https://www.rfc-editor.org/rfc/rfc5322#section-3.4.1",
  "examples": [
    "user@example.com",
    "john.doe@example.org",
    "test+tag@mail.example.net",
    "\"quoted.string\"@example.com",
    "user@[192.168.1.1]"
  ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "not": {
    "pattern": "[\\r\\n]"
  },
  "pattern": "^(?:[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+)*|\"(?:[ !#-\\[\\]-~]|\\\\[ -~])*\")@(?:(?:[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?\\.)+[a-zA-Z](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?|\\[(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\])$",
  "format": "email"
}
