{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RFC 5322 Email Address (Addr-Spec)",
  "description": "An Internet email address in addr-spec format as defined in RFC 5322 section 3.4.1",
  "$comment": "https://www.rfc-editor.org/rfc/rfc5322#section-3.4.1",
  "examples": [
    "user@example.com",
    "john.doe@example.com",
    "user+tag@example.com",
    "\"quoted.user\"@example.com",
    "user@[192.168.1.1]"
  ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "x-links": [ "https://www.rfc-editor.org/rfc/rfc5322#section-3.4.1" ],
  "type": "string",
  "pattern": "^(?!.*[\\x00-\\x1f\\x7f])(?:[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+)*|\"(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21\\x23-\\x5b\\x5d-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f]| )*\")@(?:[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?(?:\\.[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?)*|\\[(?:(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)|(?:[a-zA-Z0-9-]*[a-zA-Z0-9]:(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21-\\x5a\\x53-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])+))\\])$"
}
