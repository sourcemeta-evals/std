{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RFC 5322 Email Address (Addr-Spec)",
  "description": "An email address as defined by the RFC 5322 Addr-Spec format",
  "$comment": "https://www.rfc-editor.org/rfc/rfc5322#section-3.4.1",
  "examples": [
    "user@example.com",
    "john.doe@example.co.uk",
    "user+tag@example.com",
    "\"john doe\"@example.com",
    "user@[192.168.1.1]",
    "user@[IPv6:2001:db8::1]"
  ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "anyOf": [
    {
      "$comment": "dot-atom local-part with dot-atom domain (requires at least one dot in domain, and top-level label must contain at least one letter)",
      "pattern": "^[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?\\.)+[a-zA-Z](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?$"
    },
    {
      "$comment": "quoted-string local-part with dot-atom domain (requires at least one dot in domain, and top-level label must contain at least one letter)",
      "pattern": "^\"(?:[\\x20\\x21\\x23-\\x5B\\x5D-\\x7E]|\\\\[\\x20-\\x7E])*\"@(?:[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?\\.)+[a-zA-Z](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?$"
    },
    {
      "$comment": "dot-atom local-part with domain-literal",
      "pattern": "^[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+)*@\\[[\\x21-\\x5A\\x5E-\\x7E]+\\]$"
    },
    {
      "$comment": "quoted-string local-part with domain-literal",
      "pattern": "^\"(?:[\\x20\\x21\\x23-\\x5B\\x5D-\\x7E]|\\\\[\\x20-\\x7E])*\"@\\[[\\x21-\\x5A\\x5E-\\x7E]+\\]$"
    }
  ],
  "format": "email"
}
