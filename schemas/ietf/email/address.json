{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RFC 5322 Email Address",
  "description": "An Internet email address in addr-spec format as specified in RFC 5322 section 3.4.1",
  "$comment": "https://www.rfc-editor.org/rfc/rfc5322#section-3.4.1",
  "examples": [
    "user@example.com",
    "john.doe@example.org",
    "alice+tag@mail.example.net",
    "\"quoted.user\"@example.com",
    "user@[192.168.1.1]"
  ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "pattern": "^(?:(?:[a-zA-Z0-9!#$%&'*+\\-/=?^_`{|}~]+|\"(?:[\\x09\\x20\\x21\\x23-\\x5b\\x5d-\\x7e]|\\\\[\\x09\\x20\\x21-\\x7e])*\")(?:\\.(?:[a-zA-Z0-9!#$%&'*+\\-/=?^_`{|}~]+|\"(?:[\\x09\\x20\\x21\\x23-\\x5b\\x5d-\\x7e]|\\\\[\\x09\\x20\\x21-\\x7e])*\"))*)@(?:[a-zA-Z0-9!#$%&'*+\\-/=?^_`{|}~]+(?:\\.[a-zA-Z0-9!#$%&'*+\\-/=?^_`{|}~]+)*|\\[(?:[\\x09\\x20\\x21-\\x5a\\x5e-\\x7e\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x7f]|\\\\[\\x09\\x20\\x21-\\x7e])*\\])(?![\\r\\n])$"
}
