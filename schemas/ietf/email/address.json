{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RFC 5322 Email Address (Addr-Spec)",
  "description": "An Internet email address in addr-spec format as defined in RFC 5322 section 3.4.1, strictly matching the addr-spec grammar including dot-atom and quoted-string local parts, and dot-atom and domain-literal domains",
  "$comment": "https://www.rfc-editor.org/rfc/rfc5322#section-3.4.1",
  "examples": [
    "user@example.com",
    "john.doe@example.org",
    "test+tag@subdomain.example.net",
    "\"quoted.user\"@example.com",
    "user@[192.168.1.1]",
    "\"very.unusual.@.unusual.com\"@example.com",
    "admin@mailserver1"
  ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "pattern": "^(?:[a-zA-Z0-9!#$%&'*+\\-/=?^_`{|}~]+(?:\\.[a-zA-Z0-9!#$%&'*+\\-/=?^_`{|}~]+)*|\"(?:[\\x20-\\x21\\x23-\\x5B\\x5D-\\x7E]|\\\\[\\x20-\\x7E])*\")@(?:[a-zA-Z0-9!#$%&'*+\\-/=?^_`{|}~]+(?:\\.[a-zA-Z0-9!#$%&'*+\\-/=?^_`{|}~]+)*|\\[(?:[\\x21-\\x5A\\x5E-\\x7E]|\\\\[\\x20-\\x7E])*\\])$"
}
