{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ISO 8601-1:2019 Duration (Alternative Calendar Basic Format)",
  "description": "A duration in alternative basic format P[YYYYMMDD]T[HHMMSS] (ยง5.5.2.4). This schema validates month/day combinations syntactically, rejecting impossible dates like February 30 or April 31, but does not validate leap years.",
  "$comment": "https://www.iso.org/standard/70907.html",
  "examples": [ "P00020110T223355", "P00010101T000000", "P00001231T235959" ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "anyOf": [
    {
      "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})(?:01|03|05|07|08|10|12)(?:0[1-9]|[12][0-9]|3[01])T(?:[01][0-9]|2[0-3])(?:[0-5][0-9])(?:[0-5][0-9])$"
    },
    {
      "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})(?:04|06|09|11)(?:0[1-9]|[12][0-9]|30)T(?:[01][0-9]|2[0-3])(?:[0-5][0-9])(?:[0-5][0-9])$"
    },
    {
      "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})02(?:0[1-9]|1[0-9]|2[0-9])T(?:[01][0-9]|2[0-3])(?:[0-5][0-9])(?:[0-5][0-9])$"
    }
  ]
}
