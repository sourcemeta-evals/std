{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ISO 8601-1:2019 Duration (Alternative Calendar Basic Format)",
  "description": "A duration in alternative basic format P[YYYYMMDD]T[HHMMSS] (ยง5.5.2.4)",
  "$comment": "https://www.iso.org/standard/70907.html",
  "examples": [ "P00020110T223355", "P00010101T000000", "P00001231T235959" ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "allOf": [
    {
      "$comment": "Prevent February 30 and 31",
      "not": {
        "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})02(?:30|31)T"
      }
    },
    {
      "$comment": "Prevent April 31 (April has 30 days)",
      "not": {
        "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})0431T"
      }
    },
    {
      "$comment": "Prevent June 31 (June has 30 days)",
      "not": {
        "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})0631T"
      }
    },
    {
      "$comment": "Prevent September 31 (September has 30 days)",
      "not": {
        "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})0931T"
      }
    },
    {
      "$comment": "Prevent November 31 (November has 30 days)",
      "not": {
        "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})1131T"
      }
    }
  ],
  "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})(?:0[1-9]|1[0-2])(?:0[1-9]|[12][0-9]|3[01])T(?:[01][0-9]|2[0-3])(?:[0-5][0-9])(?:[0-5][0-9])$"
}
