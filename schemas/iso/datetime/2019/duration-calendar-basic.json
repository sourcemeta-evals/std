{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ISO 8601-1:2019 Calendar Duration (Basic Format)",
  "description": "A calendar duration in basic format (PnnnnYnnMnnD) that represents a period of time in years, months, and days",
  "$comment": "https://www.iso.org/standard/70907.html",
  "examples": [ "P0001Y01M01D", "P0000Y12M31D", "P0010Y06M15D", "P0000Y00M00D" ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "not": {
    "anyOf": [
      {
        "$comment": "Disallow February with 29, 30, or 31 days (excluding leap year validation)",
        "pattern": "^P\\d{4}Y02M(29|30|31)D$"
      },
      {
        "$comment": "Disallow April (04) with 31 days",
        "pattern": "^P\\d{4}Y04M31D$"
      },
      {
        "$comment": "Disallow June (06) with 31 days",
        "pattern": "^P\\d{4}Y06M31D$"
      },
      {
        "$comment": "Disallow September (09) with 31 days",
        "pattern": "^P\\d{4}Y09M31D$"
      },
      {
        "$comment": "Disallow November (11) with 31 days",
        "pattern": "^P\\d{4}Y11M31D$"
      }
    ]
  },
  "pattern": "^P\\d{4}Y\\d{2}M\\d{2}D$"
}
