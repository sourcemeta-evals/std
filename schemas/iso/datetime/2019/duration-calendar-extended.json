{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ISO 8601-1:2019 Duration (Alternative Calendar Extended Format)",
  "description": "A duration in alternative extended format P[YYYY-MM-DD]T[HH:MM:SS] (ยง5.5.2.4)",
  "$comment": "https://www.iso.org/standard/70907.html",
  "examples": [
    "P0002-01-10T22:33:55",
    "P0001-01-01T00:00:00",
    "P0001-12-31T23:59:59"
  ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "oneOf": [
    {
      "description": "Months with 31 days (Jan, Mar, May, Jul, Aug, Oct, Dec)",
      "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})-(?:01|03|05|07|08|10|12)-(?:0[1-9]|[12][0-9]|3[01])T(?:[01][0-9]|2[0-3]):(?:[0-5][0-9]):(?:[0-5][0-9])$"
    },
    {
      "description": "Months with 30 days (Apr, Jun, Sep, Nov)",
      "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})-(?:04|06|09|11)-(?:0[1-9]|[12][0-9]|30)T(?:[01][0-9]|2[0-3]):(?:[0-5][0-9]):(?:[0-5][0-9])$"
    },
    {
      "description": "February with up to 29 days (leap year validation delegated to consumers)",
      "pattern": "^P(?:[0-9]{4}|[+-][0-9]{5,})-02-(?:0[1-9]|1[0-9]|2[0-9])T(?:[01][0-9]|2[0-3]):(?:[0-5][0-9]):(?:[0-5][0-9])$"
    }
  ]
}
