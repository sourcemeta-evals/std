{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ISO 8601-1:2019 Calendar Duration (Extended Format)",
  "description": "A calendar duration in extended format (P[nnnn]-[nn]-[nn]) that represents a period of time in years, months, and days",
  "$comment": "https://www.iso.org/standard/70907.html",
  "examples": [ "P0001-01-01", "P0000-12-31", "P0010-06-15", "P0000-00-00" ],
  "x-license": "https://github.com/sourcemeta/std/blob/main/LICENSE",
  "type": "string",
  "not": {
    "anyOf": [
      {
        "$comment": "Disallow February with 29, 30, or 31 days (excluding leap year validation)",
        "pattern": "^P\\d{4}-02-(29|30|31)$"
      },
      {
        "$comment": "Disallow April (04) with 31 days",
        "pattern": "^P\\d{4}-04-31$"
      },
      {
        "$comment": "Disallow June (06) with 31 days",
        "pattern": "^P\\d{4}-06-31$"
      },
      {
        "$comment": "Disallow September (09) with 31 days",
        "pattern": "^P\\d{4}-09-31$"
      },
      {
        "$comment": "Disallow November (11) with 31 days",
        "pattern": "^P\\d{4}-11-31$"
      }
    ]
  },
  "pattern": "^P\\d{4}-\\d{2}-\\d{2}$"
}
